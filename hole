            stdscr.addstr(4,31,"CURSES",color_pair(4))
            if sum(curss) == 0:
                stdscr.addstr(6,31,"You are fine.")
            else:
                t = 0
                for c in range(0,len(curss)):
                    if curss[c] > 0:
                        stdscr.addstr(6+t,31,curses_names[c]+" ("+str(curss[c])+")")
                        t+=1
            


            stdscr.addstr(15,1,"ATTRIBUTES",color_pair_fb(CYAN,BLACK))
            u = 0
