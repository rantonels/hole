def cansee(xa,ya,xb,yb):
    if (xa==xb) and (ya==yb):
        return True
    s = True
    for sp in get_line(xa,ya,xb,yb):
        if not (sp in [(xa,ya),(xb,yb)]): 
            if not isnonsolid(lvl[sp[0]][sp[1]]):
                return False
    return True


messages=[("the adventure begins",0)]
def mess(strin,col=0):
    global messages
    if False: #len(messages)>=5:
        messages.pop(0)
    messages.append([strin,col])

def formatrep(n):
    if n <= 1:
        return ""
    else:
        return " (x%s)"%n

def printBar(y,x,string,filled,total,fillpair,backpair):
    sss = string.ljust(total)
    back.addstr(y,x,        sss[0:filled]   ,fillpair)
    back.addstr(y,x+filled, sss[filled:]    ,backpair)

def messformat():
    global messages

    if len(messages)<=1:
        return messages

    out = [messages[0]]

    count = 1
    for i in range(1,len(messages)+1):
        if i == len(messages) or messages[i][0] != messages[i-1][0]:
            out.append((messages[i-1][0] + formatrep(count) , messages[i-1][1]))
            count = 1
        else:
            count +=1

    return out


def firstFreeRoom():
    global mapper
    mapper.pRoomList.sort(key = lambda r : r.count)
    return mapper.pRoomList[0]


def findfree():
    global lvl,mapper

    safe2 = 0

    while safe2 < 50:
        r = firstFreeRoom()
        gx = 0
        gy = 0
        safe = 0

        while safe < 400:
            gx = randint(r.x,r.x+r.w)
            gy = randint(r.y,r.y+r.h)
            safe+=1

            if isfree(lvl[gx][gy]):
               r.count += 1
               return (gx,gy)

        safe += 50
        mapper.pRoomList.remove(r)

    return (0,0)

fog = []
def floodfill(xs,ys,ite=-1,force=False):
    if (xs < 0) or (xs>=LV_W) or (ys < 0) or (ys>=LV_H):
        return
    if ite==0:
        return
    if ite==-1:
        nex=-1
    else:
        nex=ite-1
    
    if fog[xs][ys] != 0 and not force:
        return
    fog[xs][ys] = 1
    if isnonsolid(lvl[xs][ys]):
        floodfill(xs+1,ys,nex)
        floodfill(xs-1,ys,nex)
        floodfill(xs,ys-1,nex)
        floodfill(xs,ys+1,nex)
        floodfill(xs+1,ys+1,nex)
        floodfill(xs-1,ys+1,nex)
        floodfill(xs-1,ys-1,nex)
        floodfill(xs+1,ys-1,nex)

con = []
def confloodfill(xs,ys,ite=-1):
    global con
    if (xs < 0) or (xs>=LV_W) or (ys < 0) or (ys>=LV_H):
        return
    if ite==0:
        return
    if ite==-1:
        nex=-1
    else:
        nex=ite-1
    
    if con[xs][ys] != 0:
        return
    con[xs][ys] = 1
    if ispathable(lvl[xs][ys]):
        confloodfill(xs+1,ys,nex)
        confloodfill(xs-1,ys,nex)
        confloodfill(xs,ys-1,nex)
        confloodfill(xs,ys+1,nex)
        confloodfill(xs+1,ys+1,nex)
        confloodfill(xs-1,ys+1,nex)
        confloodfill(xs-1,ys-1,nex)
        confloodfill(xs+1,ys-1,nex)


