def addstrtrans(screen,y,x,string,col = curses.color_pair(0)):
	for i in range(0,len(string)):
		if string[i] != ' ':
			screen.addch(y,x+i,string[i],col)

def isfree(num):
	return (num in [0])
def isnonsolid(num):
	return (num in [0,8])

